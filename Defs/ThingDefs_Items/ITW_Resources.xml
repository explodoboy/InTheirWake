            <SharpDamageMultiplier>1.30</SharpDamageMultiplier>
            <BluntDamageMultiplier>1.30</BluntDamageMultiplier>
        </statBases>
        <stuffProps>
            <color>(229,229,229)</color>
            <commonality>0.01</commonality>
            <statOffsets>
                <Beauty>12</Beauty>
            </statOffsets>
            <statFactors>
