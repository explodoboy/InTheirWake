<Defs> <!-- If Royalty isn't active, then the item should be unobtainable. -->

    <ThingDef ParentName="ITW_DrugItemBase">
        <defName>ITW_DrugPsychic</defName>
        <label>psion</label>
        <description>A concoction of mechanites made solely for psychics. They provide an immediate burst of psyfocus upon injection, and then mitigate neural heat and improve the effectiveness of meditation for a few hours.\n\nA dose lasts for 12 hours.</description>
        <descriptionHyperlinks>
            <HediffDef>ITW_DrugPsychic</HediffDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>BaseITW/Things/Item/Drug/ITW_DrugPsychic</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>60</MarketValue>
        </statBases>
        <ingestible>
            <joyKind>Chemical</joyKind>
            <joy>0.25</joy>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>ITW_DrugPsychic</hediffDef>
                    <severity>1</severity>
                </li>
                <li Class="IngestionOutcomeDoer_OffsetPsyfocus"> <!-- So go-juice's psyfocus boost did exist in XML... -->
                    <offset>0.5</offset>
                </li>
            </outcomeDoers>
        </ingestible>
        <researchPrerequisites>
            <li>ITW_MedicineAndDrugs</li>
        </researchPrerequisites>
        <techLevel>Ultra</techLevel> <!-- Assuming highest just in case. -->
        <tradeTags Inherit="False"><li>Drugs</li></tradeTags> <!-- Inside Def and not base to allow modsettings to disable -->
        <comps>
            <li Class="CompProperties_Drug">
                <addictiveness>0</addictiveness>
                <existingAddictionSeverityOffset>0</existingAddictionSeverityOffset>
                <needLevelOffset>0</needLevelOffset>
                <isCombatEnhancingDrug>true</isCombatEnhancingDrug>
                <listOrder>200</listOrder>
                <overdoseSeverityOffset>0</overdoseSeverityOffset>
                <largeOverdoseChance>0</largeOverdoseChance>
            </li>
        </comps>
    </ThingDef>

    <HediffDef ParentName="ITW_DrugHediffBase">
        <defName>ITW_DrugPsychic</defName>
        <label>high on PSION-I</label>
        <labelNoun>a PSION-I high</labelNoun>
        <description>Charged PSION-I mechanites in the brain. The mechanites are increasing the rate Psyfocus is gained. Eventually they will lose charge and harmlessly filter out of the body.</description>
        <defaultLabelColor>(255,60,0)</defaultLabelColor>
        <maxSeverity>1.0</maxSeverity>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-2</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
            </li>
        </comps>
        <stages>
            <li>
                <statOffsets>
                    <PsychicEntropyMax MayRequire="Ludeon.RimWorld.Royalty">0.5</PsychicEntropyMax>
                    <PsychicEntropyRecoveryRate MayRequire="Ludeon.RimWorld.Royalty">0.5</PsychicEntropyRecoveryRate>
                    <MeditationFocusGain MayRequire="Ludeon.RimWorld.Royalty">1</MeditationFocusGain>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>
    
</Defs>