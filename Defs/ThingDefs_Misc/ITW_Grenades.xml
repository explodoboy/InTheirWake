<Defs>

    <ThingDef Abstract="True" Name="ITW_GrenadeBase" ParentName="BaseMakeableGrenade">
        <uiIconScale>1.3</uiIconScale>
        <soundInteract>Interact_Grenade</soundInteract>
        <techLevel>Archotech</techLevel>
        <statBases>
            <Mass>1</Mass>
            <RangedWeapon_Cooldown>2.66</RangedWeapon_Cooldown>
            <WorkToMake>12000</WorkToMake>
        </statBases>
        <thingCategories>
            <li>Grenades</li>
        </thingCategories>
    </ThingDef>


    <ThingDef ParentName="ITW_GrenadeBase">
        <defName>ITW_GrenadeEMP</defName>
        <label>stellar EMP grenade</label>
        <description>High-power EMP grenade with mobility thrusters for extended range. They can be thrown a decent distance where they'll discharge, emitting an electromagnetic pulse that disrupts electronic equipment such as shields and mechanoids.</description>
        <recipeMaker>
            <researchPrerequisite>ITW_Grenades</researchPrerequisite>
            <recipeUsers Inherit="False">
                <li>ITW_CraftingMain</li>
            </recipeUsers>
        </recipeMaker>
        <weaponTags>
            <li>GrenadeEMP</li>
        </weaponTags>
        <tradeTags Inherit="False">
            <li>WeaponRanged</li>
        </tradeTags>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>BaseITW/Things/Item/Equipment/WeaponRanged/ITW_GrenadeEMP</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <techLevel>Ultra</techLevel> <!-- Override for Gen1, since it's the only non-Archotech generation. -->
        <costList>
            <ITW_MaterialCommon>30</ITW_MaterialCommon>
            <ITW_Component>4</ITW_Component>
        </costList>
        <verbs>
            <li>
                <label>throw stellar EMP grenade</label>
                <verbClass>Verb_LaunchProjectile</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <range>17.9</range>
                <forcedMissRadius>1.9</forcedMissRadius>
                <warmupTime>1.5</warmupTime>
                <noiseRadius>4</noiseRadius>
                <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
                <soundCast>ThrowGrenade</soundCast>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
                <defaultProjectile>ITW_Proj_GrenadeEMP</defaultProjectile>
                <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
            </li>
        </verbs>
    </ThingDef>

    <ThingDef ParentName="BaseGrenadeProjectile">
