    <ThingDef ParentName="ITW_BaseGun">
        <defName>ITW_Pistol</defName>
        <label>phitech pistol</label>
        <description>A pistol that launches packets of phi-matter that react violently with all matter (including air) on contact. It is designed to be as cheap as possible, trading performance for mass-producibility. It does decently at all ranges.</description>
        <soundInteract>Interact_ChargeLance</soundInteract>
        <graphicData>
            <texPath>BaseITW/Things/Item/Equipment/WeaponRanged/ITW_Pistol</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Mass>1.25</Mass>
            <WorkToMake>20000</WorkToMake>
            <AccuracyTouch>0.75</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.75</AccuracyMedium>
            <AccuracyLong>0.65</AccuracyLong>
            <RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
        </statBases>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>ITW_PistolBullet</defaultProjectile>
                <warmupTime>0.3</warmupTime>
                <range>27.9</range>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
            <label>barrel</label>
            <capacities>
                <li>Blunt</li>
                <li>Poke</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <costList>
            <ITW_MaterialCommon>25</ITW_MaterialCommon>
            <ITW_Component>1</ITW_Component>
        </costList>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>ITW_PistolBullet</defName>
